<div class="input-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
          <p class="text-center">Bitcoin (BTC)</p class="text-center">
          <input id="bitcoin-value" class="col-xs-offset-4 col-xs-3 input-round input-lg" type="text">
          <input id="bitcoin-percentage" class="col-xs-1 input-round input-sm" type="text">
      </div>

      <div class="col-xs-6">
          <p class="text-center">Litecoin (LTC)</p>
          <input id="litecoin-value" class="col-xs-offset-4 col-xs-3 input-round input-lg" type="text">
          <input id="litecoin-percentage" class="col-xs-1 input-round input-sm" type="text">
      </div>
    </div>
  </div>
</div>

<div class="button-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center">
        <a id="btnUpdate" class="btn-update">Update prices</a>
      </div>
    </div>
  </div>
</div>

<div class="coin-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 coin-container">
        <p class="coin-name">Bitcoin (BTC)</p>
        <span class="col-xs-7 coin-value"><%= @bitcoin_value %></span>
        <span class="col-xs-offset-2 col-xs-3 coin-percentage"><%= "#{@bitcoin_percentage}%" %></span>
      </div>
    </div>
  </div>
</div>

<div class="coin-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 coin-container">
        <p class="coin-name">Litecoin (LTC)</p>
        <span class="col-xs-7 coin-value"><%= @litecoin_value %></span>
        <span class="col-xs-offset-2 col-xs-3 coin-percentage"><%= "#{@litecoin_percentage}%" %></span>
      </div>
    </div>
  </div>
</div>
